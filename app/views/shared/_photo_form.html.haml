= form_for(@photo, html: { multipart: true }) do |f|
  = render 'shared/error_messages', object: @photo
  %span.picture
    = f.file_field :picture, required: true, accept: 'image/jpeg,image/gif,image/png'
  .field
    = f.text_area :description, required: true, placeholder: "Добавить комментарий к фото..."
  = f.submit "Добавить", class: "button1"
:javascript
  $('#photo_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });